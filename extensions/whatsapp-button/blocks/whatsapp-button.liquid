{% comment %}
  WhatsApp Chat Button - App Embed Block
  
  This block renders a floating WhatsApp chat button on the storefront.
  Settings are loaded from app metafields.
{% endcomment %}

{%- liquid
  assign phone_number = shop.metafields.whatsapp_chat.phone_number
  assign default_message = shop.metafields.whatsapp_chat.default_message
  assign position = shop.metafields.whatsapp_chat.position
  assign enabled = shop.metafields.whatsapp_chat.enabled

  # Provide default values if not set
  if default_message == blank
    assign default_message = "Hi! I need help with..."
  endif

  if position == blank
    assign position = "bottom-right"
  endif

  if enabled == blank
    assign enabled = true
  endif
-%}

{% comment %} Only render if enabled and phone number is set {% endcomment %}
{% if enabled and phone_number != blank %}
<div id="whatsapp-chat-button-wrapper" data-position="{{ position }}">
  <a
    href="https://wa.me/{{ phone_number | url_encode }}?text={{ default_message | url_encode }}"
    target="_blank"
    rel="noopener noreferrer"
    id="whatsapp-chat-button"
    class="whatsapp-button-{{ position }}"
    aria-label="Chat on WhatsApp"
    title="Chat on WhatsApp"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      width="32"
      height="32"
      fill="white"
    >
